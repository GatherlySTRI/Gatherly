{% if nbOccurence is null %}
    {% set nbOccurence = events|length %}
{% endif %}

    {% for event in events|slice(0, nbOccurence) %}
        <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-sm">
            <div class="px-4 pt-4 pb-2 bg-gray-100 flex justify-between items-center">
            <div class="bg-yellow-300 text-yellow-900 text-xs font-semibold px-2 py-1 rounded">Rugby Ã  {{ event.variante_rugby }}</div>
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6 text-gray-400" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.919 1.603-.919 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.37 1.24.588 1.812l-2.8 2.046a1 1 0 00-.364 1.118l1.07 3.292c.3.92-.755 1.688-1.54 1.118l-2.8-2.047a1 1 0 00-1.176 0l-2.8 2.047c-.785.57-1.84-.198-1.54-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.046c-.782-.572-.38-1.812.588-1.812h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
            </div>
            <div class="h-32 bg-gray-200"></div>
            <div class="px-4 py-2">
            <div class="text-gray-900 font-semibold text-lg mb-2">{{ event.nom_evenement }}</div>
            {% if event.date_debut == event.date_fin %} <!-- Si date est la meme ou pas -->
            <p class="text-gray-500 text-sm mb-2">{{ event.date_debut }}</p>
                {% else %}
                <p class="text-gray-500 text-sm mb-2">{{ event.date_debut }} - {{ event.date_fin }} </p>
                {% endif %}
            <div class="flex justify-between items-center text-gray-700">
                <div class="flex items-center">
                <span class="font-bold">{{event.categorie_evenement}}</span>
                </div>
                <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-blue-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v18m9-9H3" />
                </svg>
                <span class="ml-1">10 interested</span>
                </div>
            </div>
            </div>
        </div>
    {% endfor %}