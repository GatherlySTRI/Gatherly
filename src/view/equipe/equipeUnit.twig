{% for equipe in equipes|slice(0, equipes|length) %}
    <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-sm mr-4 ml-4 mb-4">
        <div class="px-4 pt-4 pb-2 bg-gray-100 flex justify-between items-center">
            <div class="bg-yellow-500 text-white text-sm font-semibold px-2 py-1 rounded">
                Equipe de {{ personne.nom_personne }} {{personne.prenom_personne}}
            </div>
        </div>
        <div class="h-32 bg-gray-200"></div>
        <div class="px-4 py-2 flex justify-between items-center text-gray-700">
            <div class="flex items-center">
                <span class="font-bold text-lg">{{equipe.nom_equipe}}</span>
            </div>
        </div>
    </div>
{% endfor %}